* {
  font-family: 'Inter', sans-serif;
  box-sizing: border-box;
  color: var(--color-white);
}
body {
  --color-black: #000;
  --color-red: #aa0000;
  --color-red-lit: #ff0000;
  --color-dark-purple: #001a32;
  --color-purple: #003564;
  --color-purple-lit: #006aeb;
  --color-light: #ddd;
  --color-white: #fff;
  --color-for-dialog: #112;

  color: var(--color-white);
  background-color: var(--color-dark-purple);
}

