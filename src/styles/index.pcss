.nav {
  width: 280px;
  height: 650px;
  margin: 100px auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  &__item {
    width: 280px;
    height: 60px;
    border-radius: 30px;
    font-size: 22px;
    font-weight: 700;
    color: white;
  }
}

.search {
  -webkit-appearance: none;
  box-sizing: border-box;
  height: 40px;
  padding: 0 18px 0 40px;
  border: none;
  border-radius: 20px;
  background: url(../../static/search.svg) 12px / 22px no-repeat;
  outline: none;
  font-weight: 400;
  font-size: 16px;
  &::placeholder {
    color: var(--color-light);
    text-align: center;
  }
}
